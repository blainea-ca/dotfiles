# Aliases
alias ls='eza -h'
alias ll='eza -lh'
alias la='eza -lha'

alias gam="$HOME/bin/gamadv-xtd3/gam"
alias gam-update="bash <(curl -s -S -L https://raw.githubusercontent.com/taers232c/GAMADV-XTD3/master/src/gam-install.sh) -l -p false"
alias youtube-dl="yt-dlp"
alias brewfile-update="brew bundle dump --describe -f --file ~/.Brewfile"
alias brewfile-install="brew bundle install --file=~/.Brewfile"

# Set default editor to nano
export EDITOR=nano
export VISUAL="$EDITOR"

# 1Password plugins
source $HOME/.config/op/plugins.sh
